<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/regeist"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text1"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:text="序号"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text1"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:text="公司名称"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="70sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text2"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:text="联系人"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text3"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:text="电话"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text4"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:text="商品"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="60sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text5"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:text="规格"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text7"
            android:layout_width="90sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text6"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:text="单位"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text8"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text7"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:text="单价"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text9"
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text8"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:text="数量"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/text10"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/text9"
            android:background="@android:color/darker_gray"
            android:gravity="center_horizontal"
            android:text="日期"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@android:color/black" />

        <ListView
            android:id="@+id/kehulist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"></ListView>

    </RelativeLayout>
</HorizontalScrollView>